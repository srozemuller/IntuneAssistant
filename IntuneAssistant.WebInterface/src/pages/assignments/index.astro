---
import MainLayout from "@/layouts/main-layout.astro";
import { Button, buttonVariants } from "@/components/ui/button";
import { cn } from "@/lib/utils";
---

<MainLayout title="Assignments Viewer | ControlFlex">
    <!-- Hero Section -->
    <section class="relative overflow-hidden bg-background">
        <div class="container px-4 md:px-6 flex flex-col md:flex-row items-center justify-between py-16 md:py-24 gap-8">

            <div class="flex flex-col items-start space-y-6 max-w-[800px] mx-auto">
                <div class="inline-block">
        <span class="inline-flex items-center rounded-full px-3 py-1 text-sm bg-primary/10 text-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-1">
                <circle cx="12" cy="12" r="10" />
                <path d="m9 12 2 2 4-4" />
            </svg>
            View Intune Assignments with Ease
        </span>
                </div>
                <h1 class="font-heading text-4xl font-bold sm:text-5xl md:text-6xl lg:text-7xl !leading-[1.1] text-balance">
                    Assignments <span class="text-primary">Viewer</span>
                </h1>
                <p class="text-lg text-muted-foreground md:text-xl text-balance">
                    Streamline your Intune assignments with a user-friendly interface designed to simplify both individual and group tasks.
                </p>
                <div class="flex justify-center gap-4">
                    <a href="#features" class={cn(buttonVariants({ size: "lg", className: "w-full sm:w-auto" }))}>
                        Explore Features
                    </a>
                    <a href="/onboarding" class={cn(buttonVariants({ size: "lg", variant: "outline", className: "w-full sm:w-auto" }))}>
                        Get Started
                    </a>
                </div>
            </div>

        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="bg-muted/50 py-16 md:py-24">
        <div class="container px-4 md:px-6">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl">Assignments Features</h2>
                <p class="mt-4 text-xl text-muted-foreground">Simplify your Intune assignments with these powerful tools</p>
            </div>

            <div class="grid md:grid-cols-3 gap-8 max-w-7xl mx-auto">
                <!-- Feature 1 -->
                <a href="/assignments/overview" class="block p-8 bg-card rounded-lg border border-border shadow-lg hover:shadow-xl transition no-underline">
                    <div class="flex items-center space-x-4">
                        <div class="p-4 bg-primary/10 rounded-full">
                            <svg class="w-8 h-8 text-primary" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                                <line x1="3" y1="9" x2="21" y2="9" />
                                <line x1="9" y1="21" x2="9" y2="9" />
                                <path d="M13 15l2-2 2 4 1-1" />
                                <circle cx="6" cy="15" r="2" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-2xl font-bold text-primary">Assignments Overview</h3>
                            <p class="mt-2 text-muted-foreground">
                                View and filter all assignments in Microsoft Intune with ease.
                            </p>
                        </div>
                    </div>
                </a>

                <!-- Feature 2 -->
                <a href="/assignments/groups" class="block p-8 bg-card rounded-lg border border-border shadow-lg hover:shadow-xl transition no-underline">
                    <div class="flex items-center space-x-4">
                        <div class="p-4 bg-primary/10 rounded-full">
                            <svg class="w-8 h-8 text-primary" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-2xl font-bold text-primary">Group Assignments</h3>
                            <p class="mt-2 text-muted-foreground">
                                View Entra Id group assignments in Microsoft Intune.
                            </p>
                        </div>
                    </div>
                </a>

                <!-- Feature 3 -->
                <a href="/assignments/apps" class="block p-8 bg-card rounded-lg border border-border shadow-lg hover:shadow-xl transition no-underline">
                    <div class="flex items-center space-x-4">
                        <div class="p-4 bg-primary/10 rounded-full">
                            <svg class="w-8 h-8 text-primary" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6z" />
                                <path d="M14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6z" />
                                <path d="M4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2z" />
                                <path d="M14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-2xl font-bold text-primary">App Assignments</h3>
                            <p class="mt-2 text-muted-foreground">
                                Deploy and manage application assignments across your organization.
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </section>

    <!-- How It Works Section -->
    <section class="py-16 md:py-24">
        <div class="container px-4 md:px-6">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl">How It Works</h2>
                <p class="mt-4 text-xl text-muted-foreground">Follow these simple steps to get started with Assignments Manager</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <!-- Step 1 -->
                <div class="relative flex flex-col items-center text-center">
                    <div class="absolute -left-4 md:left-auto md:-top-4 bg-primary text-primary-foreground w-8 h-8 rounded-full flex items-center justify-center font-bold text-lg">1</div>
                    <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                            <path d="M14 2v6h6" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">Explore Features</h3>
                    <p class="text-muted-foreground">Learn about the tools available for managing assignments.</p>
                </div>

                <!-- Step 2 -->
                <div class="relative flex flex-col items-center text-center">
                    <div class="absolute -left-4 md:left-auto md:-top-4 bg-primary text-primary-foreground w-8 h-8 rounded-full flex items-center justify-center font-bold text-lg">2</div>
                    <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary">
                            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
                            <polyline points="17 8 12 3 7 8" />
                            <line x1="12" y1="3" x2="12" y2="15" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">Get Started</h3>
                    <p class="text-muted-foreground">Begin managing your assignments with just a few clicks.</p>
                </div>

                <!-- Step 3 -->
                <div class="relative flex flex-col items-center text-center">
                    <div class="absolute -left-4 md:left-auto md:-top-4 bg-primary text-primary-foreground w-8 h-8 rounded-full flex items-center justify-center font-bold text-lg">3</div>
                    <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary">
                            <path d="M14 3v4a1 1 0 0 0 1 1h4" />
                            <path d="M5 8v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-7l-5-5H6a1 1 0 0 0-1 1Z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">Optimize Assignments</h3>
                    <p class="text-muted-foreground">Leverage advanced tools to streamline your workflow.</p>
                </div>
            </div>
        </div>
    </section>
</MainLayout>