---
import MainLayout from "../../layouts/main-layout.astro";

// Check if redirect should happen based on conditions
const shouldRedirect = true; // Add your logic here if needed
---

<MainLayout title="Redirecting..." mainClass="flex-1 bg-background-200">
    <div class="flex items-center justify-center h-[calc(100vh-25vh)]">
        <div class="text-center">
            <h2 class="text-xl font-semibold mb-4">Redirecting to Customer Onboarding...</h2>
            <p class="text-gray-600">Intune Assistant is migrating to a new onboarding experience.</p>
            <p class="text-gray-600">If you are not redirected automatically,
                <a href="https://test.intuneassistant.cloud/onboarding/customer/"
                   class="text-blue-600 hover:underline">click here</a>
            </p>
        </div>
    </div>
</MainLayout>

<script>
    if (typeof window !== "undefined") {
        // Immediate redirect
        window.location.href = 'https://test.intuneassistant.cloud/onboarding/customer/';
    }
</script>
